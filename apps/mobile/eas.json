{
  "cli": { "version": ">= 13.0.0", "appVersionSource": "remote" },
  "build": {
    "preview": {
      "ios": {
        "distribution": "internal",
        "simulator": false,
        "autoIncrement": "buildNumber"
      },
      "android": { "buildType": "apk" },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://fullstack-ecom-j1kc.onrender.com"
      }
    },
    "production": {
      "ios": {
        "distribution": "store",
        "autoIncrement": "buildNumber"
      },
      "android": {
        "gradleCommand": ":app:bundleRelease"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://fullstack-ecom-j1kc.onrender.com"
      }
    }
  }
}
